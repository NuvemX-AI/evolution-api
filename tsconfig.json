{
  "compilerOptions": {
    /* --------------------------------------------------------- */
    /* transpile / emit                                          */
    /* --------------------------------------------------------- */
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,

    /* --------------------------------------------------------- */
    /* language & runtime support                                */
    /* --------------------------------------------------------- */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* --------------------------------------------------------- */
    /* type-checking                                             */
    /* --------------------------------------------------------- */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* --------------------------------------------------------- */
    /* build perf                                                */
    /* --------------------------------------------------------- */
    "incremental": true,

    /* --------------------------------------------------------- */
    /* module resolution / paths                                 */
    /* --------------------------------------------------------- */
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      /* raiz API */
      "@api/*"          : ["api/*"],
      "@api"            : ["api"],

      /* módulos de domínio */
      "@controllers/*"  : ["api/controllers/*"],
      "@integrations/*" : ["api/integrations/*"],
      "@repository/*"   : ["repository/*"],
      "@services/*"     : ["api/services/*"],

      /* utilidades & libs */
      "@utils/*"        : ["utils/*"],
      "@utils"          : ["utils/index.ts"],
      "@validate/*"     : ["validate/*"],
      "@libs/*"         : ["libs/*"],
      "@cache/*"        : ["cache/*"],
      "@provider/*"     : ["provider/*"],
      "@config/*"       : ["config/*"],

      /* exceptions */
      "@exceptions"     : ["api/exceptions/index.ts"],
      "@exceptions/*"   : ["api/exceptions/*"],

      /* constantes */
      "@constants"      : ["api/constants/index.ts"],
      "@constants/*"    : ["api/constants/*"]
    }
  },

  /* arquivos que entram na compilação ------------------------ */
  "include": ["src/**/*", "src/**/*.json"],

  /* pastas ignoradas ----------------------------------------- */
  "exclude": ["node_modules", "dist", "test", "prisma"]
}
